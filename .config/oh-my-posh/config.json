{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"final_space": true,
	"version": 3,
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"background": "blue",
					"foreground": "black",
					"style": "powerline",
					"template": " <b>{{.HostName}}</b> ",
					"type": "session"
				},
				{
					"background": "black",
					"foreground": "green",
					"foreground_templates": [
						"{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
						"{{ if and (gt .Ahead 0) (gt .Behind 0) }}red{{ end }}",
						"{{ if or (gt .Ahead 0) (gt .Behind 0) }}lightGray{{ end }}"
					],
					"powerline_symbol": "\uE0B0",
					"properties": {
						"fetch_status": true,
						"full_branch_path": false
					},
					"style": "powerline",
					"template": " {{ .HEAD }} ",
					"type": "git"
				},
				{
					"type": "path",
					"style": "powerline",
					"powerline_symbol": "\uE0B0",
					"foreground": "lightGray",
					"background": "darkGray",
					"properties": {
						"max_depth": 2,
						"folder_icon": "\uf141",
						"folder_separator_icon": " \ue0b1 ",
						"right_format": "<b>%s</b>",
						"style": "agnoster_short"
					}
				}
			]
		}
	],

	"tooltips": [
		{
			"tips": [
				"git",
				"g"
			],
			"foreground": "green",
			"foreground_templates": [
				"{{ if or (.Working.Changed) (.Staging.Changed) }}lightGray{{ end }}",
				"{{ if and (gt .Ahead 0) (gt .Behind 0) }}lightGray{{ end }}",
				"{{ if gt .Ahead 0 }}lightGray{{ end }}",
				"{{ if gt .Behind 0 }}lightGray{{ end }}"
			],
			"properties": {
				"fetch_stash_count": true,
				"fetch_status": true
			},
			"template": "{{ if (gt .Behind 0) }} \uf063{{ .Behind }}{{ end }}{{ if (gt .Ahead 0) }} \uf062{{ .Ahead }}{{ end }}{{ if and (or (gt .Behind 0) (gt .Ahead 0)) (or .Staging.Changed .Working.Changed (gt .StashCount 0))}} |{{ end }}{{ if .Staging.Changed }}<green> \uf046{{ add .Staging.Unmerged .Staging.Deleted .Staging.Added .Staging.Modified .Staging.Untracked }}</>{{ end }}{{ if .Working.Changed }}<yellow> \uf044{{ add .Working.Unmerged .Working.Deleted .Working.Added .Working.Modified .Working.Untracked }}</>{{ end }}{{ if gt .StashCount 0 }}<cyan> \ueb4b{{ .StashCount }}</>{{ end }} ",
			"type": "git"
		}
	],

	"transient_prompt": {
		"background": "transparent",
		"foreground": "blue",
		"template": "❯❯ "
	}
}
