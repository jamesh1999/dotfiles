{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"final_space": true,
	"version": 3,
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"background": "blue",
					"foreground": "darkGray",
					"style": "powerline",
					"template": " <b>{{.HostName}}</b> ",
					"type": "session"
				},
				{
					"background": "black",
					"foreground": "green",
					"foreground_templates": [
					"{{ if or (.Working.Changed) (.Staging.Changed) }}lightGray{{ end }}",
					"{{ if and (gt .Ahead 0) (gt .Behind 0) }}lightGray{{ end }}",
					"{{ if gt .Ahead 0 }}lightGray{{ end }}",
					"{{ if gt .Behind 0 }}lightGray{{ end }}"
					],
					"powerline_symbol": "\uE0B0",
					"properties": {
						"fetch_stash_count": true,
						"fetch_status": true
					},
					"style": "powerline",
					"template": " {{ .HEAD }}{{ if .Staging.Changed }}<#FF6F00> \uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
					"type": "git"
				},
				{
					"type": "path",
					"style": "powerline",
					"powerline_symbol": "\uE0B0",
					"foreground": "lightGray",
					"background": "darkGray",
					"properties": {
						"max_depth": 2,
						"folder_icon": "\uf141",
						"folder_separator_icon": " \ue0b1 ",
						"style": "agnoster_short"
					}
				}
			]
		}
	]
}
